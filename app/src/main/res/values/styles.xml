<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomAutocomteStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:background">#ffff</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">#ffff</item>
    </style>

    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">#ffff</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">#ffff</item>
    </style>
    <style name="CustomButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#180cf7</item>
    </style>

</resources>
